{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/node": [
        "./node:path"
      ],
      "@/*": [
        "./src/*"
      ],
      "@src/*": [
        "./src/app/*"
      ],
      "@pages/*": [
        "./src/app/pages/*"
      ],
      "@common-components/*": [
        "./src/app/common-components/*"
      ],
      "@api/*": [
        "./src/app/api/*"
      ],
      "@store/*": [
        "./src/store/*"
      ]
    }
  },
  "types": [
    "./src/globals"
  ],
  "include": [
    "src",
    "electron",
    "*.ts",
    "*.js",
    "*.tsx",
    ".eslintrc.cjs",
    "*.d.ts",
    "*.d.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
